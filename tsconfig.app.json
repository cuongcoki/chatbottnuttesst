{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/@core/*"],
      "@domain/*": ["src/domain/*"],
      "assets/*": ["src/assets/*"],
      "@infra/*": ["src/infra/*"],
      "@views/*": ["src/views/*"],
      "@router/*": ["src/router/*"],
       "@layouts/*": ["src/layouts/*"],
      "@redux/*": ["src/redux/*"],
      "@utility/*": ["src/utility/*"],
      "@configs/*": ["src/configs/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src","vite-env.d.ts"],

}